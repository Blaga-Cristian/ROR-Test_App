<div class="row">
  <aside class="col-md-4">
    
    <section class="user_info">
      <h1>
        <%= gravatar_for current_user %>
        <%= current_user.name %>
      </h1>
    </section>
    
    <section class="user_entry_form">
      <%= render 'shared/user_entry_create_form' %>
    </section>

    <section class="entry_filter">
      <%= render 'shared/entry_filter' %>
    </section>

  </aside>
  <div class="col-md-8">
    <% if current_user.user_entries.any? %>
      <turbo-frame id="entries_frame">
        <%= render partial: 'user_entries/user_entries_stat', locals: { entries: current_user_entries } %>
        <%= render partial: 'user_entries/user_entries_list', locals: { entries: current_user_entries } %>
      </turbo-frame>
    <% end %>
  </div>
</div>
